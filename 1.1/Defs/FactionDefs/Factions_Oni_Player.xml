<Defs>

<FactionDef>
	<defName>OniPlayerColony</defName>
	<label>Oni Colony</label>
	<description>Your Oni colony.</description>
	<isPlayer>true</isPlayer>
    <pawnSingular>colonist</pawnSingular>
    <pawnsPlural>colonists</pawnsPlural>
	<basicMemberKind>OniColonist</basicMemberKind>
    <techLevel>Industrial</techLevel>
    <backstoryFilters>
		<li>
			<categories>
				<li>OniBackstory</li>
			</categories>
		</li>
	</backstoryFilters>
    <factionIconPath>World/OniBase</factionIconPath>
    <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
	<colorSpectrum>
		<li>(0, 0.737, 0.847)</li>
	</colorSpectrum>
	<playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
	<factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
	<geneticVariance>1</geneticVariance>
	<startingResearchTags>
		<li>ClassicStart</li>
		<li>OniStart</li>
	</startingResearchTags>
    <startingTechprintsResearchTags>
		<li>ClassicStart</li>
		<li>ClassicStartTechprints</li>
    </startingTechprintsResearchTags>
	<hairTags>
		<li>Urban</li>
	</hairTags>
    <apparelStuffFilter>
		<thingDefs>
			<li>OniFeather</li>
		</thingDefs>
    </apparelStuffFilter>
</FactionDef>

