<ThingDef ParentName="EggFertBase">
	<defName>EggOrniFertilized</defName>
	<label>Mega Owl Egg (fert.)</label>
	<description>A fertilized Mega Owl egg. If all goes well, it should hatch into a baby Mega Owl. It can be eaten raw, but it's much better cooked.</description>
	<graphicData>
		<color>(050,050,050)</color>
		<drawSize>0.65</drawSize>
	</graphicData>
	<statBases>
		<MarketValue>64</MarketValue>
	</statBases>
	<comps>
		<li Class="CompProperties_Hatcher">
			<hatcherDaystoHatch>7</hatcherDaystoHatch>
			<hatcherPawn>Ornimegalonyx</hatcherPawn>
		</li>
	</comps>
</ThingDef>

