<ThingDef ParentName="ArtableBedBase">
	<defName>OniShogunBed</defName>
	<label>Oni Shogun bed</label>
	<description>A luxurious gold-inlaid bed fit for the highborn. Very comfy and beautiful, it is a work of art in itself. Fits two.</description>
	<graphicData>
		<texPath>Things/Building/OniShogunBed/OniShogunBed</texPath>
		<graphicClass>Graphic_Multi</graphicClass>
		<shaderType>CutoutComplex</shaderType>
		<drawSize>(2.05,2.05)</drawSize>
		<damageData>
			<rect>(0,0.05,2,1.95)</rect>
		</damageData>
	</graphicData>
	<comps>
		<li Class="CompProperties_AffectedByFacilities">
			<linkableFacilities>
				<li>EndTable</li>
				<li>Dresser</li>
			</linkableFacilities>
		</li>
	</comps>
	<statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<Flammability>1.0</Flammability>
		<WorkToBuild>50000</WorkToBuild>
		<Mass>90</Mass>
		<Beauty>75</Beauty>
		<BedRestEffectiveness>1.05</BedRestEffectiveness>
		<Comfort>0.90</Comfort>
		<ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
		<SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
	</statBases>
	<size>(2,2)</size>
	<stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Stony</li>
	</stuffCategories>
	<costStuffCount>100</costStuffCount>
	<costList>
		<Jade>45</Jade>
		<OniFeather>100</OniFeather>
	</costList>
	<building>
		<bed_showSleeperBody>False</bed_showSleeperBody>
		<bed_healPerDay>4</bed_healPerDay>
	</building>
	<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	<fillPercent>0.4</fillPercent>
	<pathCost>60</pathCost>
	<leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
	<staticSunShadowHeight>0.17</staticSunShadowHeight>
	<castEdgeShadows>True</castEdgeShadows>
	<techLevel>Medieval</techLevel>
	<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
	<researchPrerequisites>
		<li>ComplexFurniture</li>
		<li>OniCultureFurniture</li>
	</researchPrerequisites>
	<uiIconScale>0.90</uiIconScale>
</ThingDef>

<ThingDef ParentName="ArtableFurnitureBase">
	<defName>OniSittingCushion</defName>
	<label>Oni-styled cushion</label>
	<description>A cushion adorned with Oni feathers that can be used for sitting. Can be used at tables, work stations, and elsewhere.</description>
	<graphicData>
		<texPath>Things/Building/OniSittingCushion/OniSittingCushion</texPath>
		<graphicClass>Graphic_Multi</graphicClass>
		<drawSize>(1,1)</drawSize>
		<damageData>
			<rectN>(0.25,0.234375,0.5,0.28125)</rectN>
			<rectS>(0.25,0.234375,0.5,0.28125)</rectS>
			<rectE>(0.28125,0.25,0.453125,0.25)</rectE>
			<rectW>(0.28125,0.25,0.453125,0.25)</rectW>
		</damageData>
		<shadowData>
			<volume>(0.23, 0.26, 0.23)</volume>
		</shadowData>
	</graphicData>
    <designationCategory Inherit="False" />
	<altitudeLayer>Building</altitudeLayer>
	<statBases>
		<MaxHitPoints>75</MaxHitPoints>
		<WorkToMake>6000</WorkToMake>
		<Mass>3</Mass>
		<Flammability>1.5</Flammability>
		<Beauty>11</Beauty>
		<Comfort>0.60</Comfort>
	</statBases>
	<socialPropernessMatters>true</socialPropernessMatters>
    <recipeMaker>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
			<li>CraftingSpot</li>
		</recipeUsers>
		<defaultIngredientFilter>
			<categories>
				<li>Root</li>
			</categories>
		</defaultIngredientFilter>
    </recipeMaker>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<costStuffCount>20</costStuffCount>
    <costList>
      <OniFeather>15</OniFeather>
    </costList>
	<pathCost>30</pathCost>
	<fillPercent>0.2</fillPercent>
	<defaultPlacingRot>South</defaultPlacingRot>
	<building>
		<isSittable>true</isSittable>
	</building>
	<researchPrerequisites>
		<li>OniCultureFurniture</li>
	</researchPrerequisites>
</ThingDef>

</Defs>