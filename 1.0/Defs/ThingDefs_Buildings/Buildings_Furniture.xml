<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BedWithQualityBase">
	<defName>OniBed</defName>
	<label>Oni bed</label>
	<description>A simple bed that lays on a large flat piece of wood on the floor, usually made of cloth or leather, often lined with fur.</description>
	<graphicData>
		<texPath>Things/Building/OniBed/OniBed</texPath>
		<graphicClass>Graphic_Multi</graphicClass>
		<shaderType>CutoutComplex</shaderType>
		<drawSize>(2,2)</drawSize>
	</graphicData>
	<castEdgeShadows>True</castEdgeShadows>
	<statBases>
		<MaxHitPoints>105</MaxHitPoints>
		<Flammability>1.0</Flammability>
		<Mass>7.5</Mass>
		<BedRestEffectiveness>0.98</BedRestEffectiveness>
		<ImmunityGainSpeedFactor>1.05</ImmunityGainSpeedFactor>
		<Comfort>0.72</Comfort>
		<WorkToBuild>650</WorkToBuild>
	</statBases>
	<comps>
		<li Class="CompProperties_AffectedByFacilities">
			<linkableFacilities>
				<li>Dresser</li>
				<li>EndTable</li>
			</linkableFacilities>
		</li>
	</comps>
	<size>(1,2)</size>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<costStuffCount>40</costStuffCount>
	<costList>
		<WoodLog>10</WoodLog>
	</costList>
	<building>
		<bed_showSleeperBody>false</bed_showSleeperBody>
		<bed_healPerDay>4</bed_healPerDay>
	</building>
	<pathCost>5</pathCost>
	<passability>Standable</passability>
    <researchPrerequisites>
		<li>OniCultureFurniture</li>
    </researchPrerequisites>
</ThingDef>

