<?xml version="1.0" encoding="utf-8"?>
<Defs>

<ThingDef ParentName="ApparelMakeableBase">
	<defName>Apparel_OniWrap</defName>
	<label>feathered wrap</label>
	<description>The traditional Oni apparel simply made from their feathers, woven in a way to allow slightly easier movement of the air passing through it, increasing movement speed. Provides good insulation from both heat and cold.</description>
	<techLevel>Neolithic</techLevel>
	<graphicData>
		<texPath>Things/Apparel/Onifeatherdress</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<drawSize>1.15</drawSize>
	</graphicData>
	<recipeMaker>
		<recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
			<li>CraftingSpot</li>
		</recipeUsers>
	</recipeMaker>
	<costList>
		<OniFeather>60</OniFeather>
	</costList>
	<statBases>
		<WorkToMake>2600</WorkToMake>
		<MaxHitPoints>250</MaxHitPoints>
		<Mass>0.8</Mass>
		<ArmorRating_Blunt>0.14</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.172</ArmorRating_Sharp>
		<Insulation_Cold>15.75</Insulation_Cold>
		<Insulation_Heat>12.0</Insulation_Heat>
		<EquipDelay>2.5</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<SocialImpact>0.25</SocialImpact>
		<MoveSpeed>0.10</MoveSpeed>
	</equippedStatOffsets>
	<thingCategories>
		<li>OniApparel</li>
	</thingCategories>
	<apparel>	
		<wornGraphicPath>Things/Apparel/Onifeatherdress</wornGraphicPath>
		<layers>
			<li>Shell</li>
		</layers>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
			<li>Neck</li>
		</bodyPartGroups>
		<defaultOutfitTags>
			<li>Worker</li>
			<li>Soldier</li>
		</defaultOutfitTags>
		<tags>
			<li>OniWear</li>
		</tags>
	</apparel>
	<tradeTags>
		<li>OniApparel</li>
	</tradeTags>
</ThingDef>

<ThingDef ParentName="ApparelMakeableBase">
	<defName>Apparel_OniWrapStuffed</defName>
	<label>Oni-styled wrap</label>
	<description>The iconic Oni apparel using other materials alongside their feathers. Provides good insulation from both heat and cold.</description>
	<graphicData>
		<texPath>Things/Apparel/Onidress</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	<drawSize>1.15</drawSize>
	</graphicData>
	<techLevel>Neolithic</techLevel>
	<costStuffCount>60</costStuffCount>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>	
	<costList>
		<OniFeather>20</OniFeather>
	</costList>
	<statBases>
		<MaxHitPoints>180</MaxHitPoints>
		<WorkToMake>7000</WorkToMake>
		<Mass>2.5</Mass>
		<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>2.5</EquipDelay>
	</statBases>
	<thingCategories>
		<li>OniApparel</li>
	</thingCategories>
	<apparel>	
		<wornGraphicPath>Things/Apparel/Onidress</wornGraphicPath>
		<layers>
			<li>Shell</li>
		</layers>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
			<li>Neck</li>
		</bodyPartGroups>
		<defaultOutfitTags>
			<li>Worker</li>
			<li>Soldier</li>
		</defaultOutfitTags>
		<tags>
			<li>OniWear</li>
		</tags>
	</apparel>
	<tradeTags>
		<li>OniApparel</li>
	</tradeTags>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>10</weight>
				<only>(0.33,0.33,0.33)</only>
			</li>
			<li>
				<weight>10</weight>
				<only>(0.65,0.65,0.65)</only>
			</li>
			<li>
				<weight>10</weight>
				<only>(0.4,0.3,0.15)</only>
			</li>
			<li>
				<weight>15</weight>
				<min>(0.3,0.3,0.3)</min>
				<max>(0.5,0.5,0.5)</max>
			</li>
			<li>
				<weight>6</weight>
				<min>(0.5,0.5,0.5)</min>
				<max>(1,1,1)</max>
			</li>
		</options>
	</colorGenerator>
</ThingDef>

